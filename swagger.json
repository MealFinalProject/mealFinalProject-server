{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0", 
      "title": "EatAtHome",
      "description": "Ironhack final project"
    },
    "host": "mealproject-server.herokuapp.com",
    "basePath": "/api",
    "schemes": ["https"],
    "consumes": ["application/json"],
    "produces": ["application/json"],
    "paths": {
        "/users/search": {
          "get": {
            "tags": ["Users"],
            "summary": "Get all users in system",
            "responses": {
              "200": {
                "description": "OK"
              }
            }
          }
        },
        "/user/{id}": {
            "get": {
                "tags": ["Users"],
                "summary": "Get user by ID in system",
                "parameters": [{
                    "in": "path",
                    "name": "id",   
                    "required": true,
                    "description": "The user ID"
                }],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/users/follow/{id}": {
            "put": {
                "tags": ["Users"],
                "summary": "Follow user",
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",   
                        "required": true,
                        "description": "The user to be follow ID"
                    },
                    {
                        "in": "body",
                        "name": "userInSessionId",   
                        "required": true,
                        "description": "The user ID",
                        "schema": {
                            "$ref": "#/definitions/userInSessionId"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/users/unfollow/{id}": {
            "put": {
                "tags": ["Users"],
                "summary": "Unfollow user",
